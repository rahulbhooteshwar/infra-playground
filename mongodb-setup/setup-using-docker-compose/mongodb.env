# MongoDB Version Configuration
export MONGO_VERSION=4.4
# export MONGO_VERSION=7.0.16

# Container Names
export MONGO1_CONTAINER_NAME=mongo1
export MONGO2_CONTAINER_NAME=mongo2
export MONGO3_CONTAINER_NAME=mongo3

# MongoDB Authentication
export MONGO_INITDB_ROOT_USERNAME=admin
export MONGO_INITDB_ROOT_PASSWORD=password123

# Replica Set Configuration
export MONGO_REPLICA_SET_NAME=rs0

# Port Configuration
export MONGO1_PORT=27017
export MONGO2_PORT=27018
export MONGO3_PORT=27019

# Data Paths (version-specific, relative to current directory)
export MONGO1_DATA_PATH=./data/${MONGO_VERSION}/1
export MONGO2_DATA_PATH=./data/${MONGO_VERSION}/2
export MONGO3_DATA_PATH=./data/${MONGO_VERSION}/3

# Log Paths (version-specific, relative to current directory)
export MONGO1_LOG_PATH=./logs/${MONGO_VERSION}/1
export MONGO2_LOG_PATH=./logs/${MONGO_VERSION}/2
export MONGO3_LOG_PATH=./logs/${MONGO_VERSION}/3

# Keyfile Path
export MONGO_KEYFILE_PATH=./extras/mongodb-keyfile